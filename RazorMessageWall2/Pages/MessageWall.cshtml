@page
@model RazorMessageWall2.Pages.MessageWallModel
@{
    ViewData["Title"] = "Message Wall";
}

<h1>Message Wall</h1>
<form method="post">
    <div class="form-group">
        @for (int i=0;i<Model.Messages.Count;i++)
        {
            <input type="hidden" asp-for="@Model.Messages[i]" />
        }
        <input asp-for="Message" type="text" id="message" name="message" placeholder="Enter your message">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

<div>
    <h2>Messages</h2>
    <ul>
        @foreach (var message in Model.Messages)
        {
            <li>@message</li>
        }
    </ul>
</div>